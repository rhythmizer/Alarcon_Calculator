<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="@color/gray"
        android:gravity="right|center"
        android:textSize="40pt"
        android:layout_marginBottom="1pt"
        android:inputType="textPersonName"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/buPlusMinus"
                android:text="+/-"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/buDivide"
                android:text="/"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>

            <Button
                android:id="@+id/buMultiply"
                android:layout_width="30pt"
                android:layout_height="59dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:text="*"
                android:onClick="operatorEvent"
                android:textColor="#FFF">
            </Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buSeven"
                android:text="7"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/buEight"
                android:text="8"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/buNine"
                android:text="9"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>

            <Button
                android:id="@+id/buPercent"
                android:layout_width="30pt"
                android:layout_height="59dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="%"
                android:onClick="percentEvent"
                android:textColor="@color/white"
                tools:ignore="TextContrastCheck,TextContrastCheck"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buFour"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="4"
                android:onClick="NumberEvent"
                ></Button>

            <Button
                android:id="@+id/buFive"
                android:text="5"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/buSix"
                android:text="6"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>

            <Button
                android:id="@+id/buPlus"
                android:layout_width="30pt"
                android:layout_height="59dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:text="+"
                android:onClick="operatorEvent"
                android:textColor="#FFF"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buOne"
                android:text="1"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/buTwo"
                android:text="2"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/buThree"
                android:text="3"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>

            <Button
                android:id="@+id/buMinus"
                android:layout_width="30pt"
                android:layout_height="59dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:text="-"
                android:onClick="operatorEvent"
                android:textColor="#FFF"></Button>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/buZero"
                android:text="0"
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="46pt"
                android:layout_height="30pt"
                android:layout_weight="2"
                ></Button>
            <Button
                android:id="@+id/buPoint"
                android:text="."
                android:onClick="NumberEvent"
                android:layout_marginRight="1pt"
                android:layout_width="46pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                ></Button>

            <Button
                android:id="@+id/buEquals"
                android:layout_width="30pt"
                android:layout_height="59dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:text="="
                android:onClick="equalEvent"
                android:textColor="#FFF"></Button>
        </TableRow>


    </LinearLayout>



</LinearLayout>